//database
datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

//generator
generator client {
    provider             = "prisma-client-py"
    interface            = "asyncio"
    recursive_type_depth = 5
}

enum Role {
    USER
    ADMIN
}

model User {
    id        Int      @id @default(autoincrement())
    name      String
    username      String
    email     String   @unique
    password  String
    role      Role     @default(USER)
    createdAt DateTime @default(now())
}
