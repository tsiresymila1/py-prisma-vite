//database
datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

//generator
generator client {
    provider             = "prisma-client-py"
    interface            = "asyncio"
    recursive_type_depth = 5
}

enum Role {
    USER
    ADMIN
}

enum Status {
    Online
    Offline
}

enum MessageType {
    String
    File
    Image
    Html
}

model User {
    id            Int            @id @default(autoincrement())
    name          String
    username      String
    email         String         @unique
    password      String
    image         String?
    status        Status         @default(Offline)
    role          Role           @default(USER)
    createdAt     DateTime       @default(now())
    updatedAt     DateTime       @default(now())
    conversations Conversation[] @relation("UserConversation")
    messages      Message[]
    readers       Message[]      @relation("UserMessageRead")
    initiators    Conversation[]
}

model Conversation {
    id           Int       @id @default(autoincrement())
    title        String?   
    participants User[]    @relation("UserConversation")
    messages     Message[]
    initiatorId  Int
    initiator    User      @relation(fields: [initiatorId], references: [id])
}

model Message {
    id             Int          @id @default(autoincrement())
    conversationId Int
    conversation   Conversation @relation(fields: [conversationId], references: [id])
    userId         Int
    user           User         @relation(fields: [userId], references: [id])
    type           MessageType  @default(String)
    content        String?
    readers        User[]       @relation("UserMessageRead")
    createdAt      DateTime     @default(now())
    updatedAt      DateTime     @default(now())
}
